<?xml version="1.0"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="GeoLocationDataSourceTarget" class="com.liferay.blade.samples.servicebuilder.jndi.ContextUtil" factory-method="getDataSource" lazy-init="true">
		<constructor-arg><value>jdbc/GeoLocation</value></constructor-arg>
	</bean>
	<bean id="GeoLocationDataSource" class="org.springframework.jdbc.datasource.LazyConnectionDataSourceProxy" lazy-init="true">
		<property name="targetDataSource" ref="GeoLocationDataSourceTarget" />
	</bean>
	<bean id="GeoLocationHibernateSessionFactory" class="com.liferay.portal.spring.hibernate.PortletHibernateConfiguration" lazy-init="true">
		<property name="dataSource" ref="GeoLocationDataSource" />
	</bean>
	<bean id="GeoLocationTransactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="dataSource" ref="GeoLocationDataSource" />
		<property name="sessionFactory" ref="GeoLocationHibernateSessionFactory" />
	</bean>
</beans>